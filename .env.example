# ============================================
# WalletConnect Configuration
# ============================================
# Get your project ID from: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# ============================================
# Base Chain Configuration (OnchainKit)
# ============================================
# Get API key from: https://portal.cdp.coinbase.com/
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here

# ============================================
# Paymaster (Gasless Transactions)
# ============================================
# Enable in Coinbase Developer Portal
NEXT_PUBLIC_COINBASE_PAYMASTER_KEY=your_paymaster_key_here

# ============================================
# Base RPC URLs (Optional - defaults provided)
# ============================================
# Base Mainnet RPC
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# Base Sepolia Testnet RPC
NEXT_PUBLIC_BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# ============================================
# Alternative Paymasters (Optional)
# ============================================
# Pimlico API key for advanced AA features
# Get from: https://www.pimlico.io/
NEXT_PUBLIC_PIMLICO_API_KEY=your_pimlico_api_key_here

# ============================================
# Server Configuration (if using backend)
# ============================================
PORT=5000
NODE_ENV=development

# Session secret for express-session
SESSION_SECRET=your_random_session_secret_here_change_in_production

# ============================================
# Database (Optional)
# ============================================
# Use in-memory storage or PostgreSQL
USE_IN_MEMORY_STORAGE=true
DATABASE_URL=postgresql://user:password@localhost:5432/mydb

# ============================================
# Contract Addresses (Update with your own)
# ============================================
# Your deployed contracts on Base
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=0xYourNFTContractAddress
NEXT_PUBLIC_TIPPING_CONTRACT_ADDRESS=0xYourTippingContractAddress
NEXT_PUBLIC_JUKEBOX_CONTRACT_ADDRESS=0xYourJukeboxContractAddress
